@{
    ViewBag.Title = "Register";
}

@section scripts{
    <script src="~/Scripts/Account/Register.js"></script>
}

<div id="Step1" class="form-horizontal">

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <h2>Step 1</h2>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 control-label">
            <label for="Login">Login</label>
        </div>
        <div class="col-sm-8">
            <input type="text" id="Login" name="Login" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 control-label">
            <label for="Password">Password</label>
        </div>
        <div class="col-sm-8">
            <input type="password" id="Password" name="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 control-label">
            <label for="ConfirmPassword">Confirm password</label>
        </div>
        <div class="col-sm-8">
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="Agree" name="Agree" value="" />
                    Agree to work for food
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="button" id="GoToStep2" class="btn btn-default">Go to step 2</button>
        </div>
    </div>

</div>

<div id="Step2" class="form-horizontal hidden">

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <h2>Step 2</h2>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 control-label">
            <label for="">Country</label>
        </div>
        <div class="col-sm-8">
            <select class="form-control">
                <option>Select country</option>
                <option>France</option>
                <option>Germany</option>
                <option>Netherlands</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 control-label">
            <label for="">Province</label>
        </div>
        <div class="col-sm-8">
            <select class="form-control">
                <option>Please select country first</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="button" class="btn btn-primary">Save</button>
        </div>
    </div>

</div>
